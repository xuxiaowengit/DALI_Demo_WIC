<Window x:Class="DALI_Demo_WIC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DALI_Demo_WIC"
        mc:Ignorable="d"
        Title="DALI 灯光控制调试工具" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"  >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/TechStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 串口设置区域 -->
        <GroupBox Header="串口设置" Grid.Column="0" Grid.Row="0" Margin="5" Style="{StaticResource TechGroupBox}">
            <StackPanel Orientation="Vertical" Margin="5">
                <StackPanel Orientation="Horizontal">
                    <Label Content="端口:" Width="80"/>
                    <ComboBox x:Name="cmbPort" Width="120" Style="{StaticResource TechComboBox}"/>
                    <Button x:Name="btnConnect" Content="连接" Width="80" Margin="10,0,0,0" Style="{StaticResource TechButton}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="波特率:" Width="80"/>
                    <ComboBox x:Name="cmbBaudRate" Width="120" Style="{StaticResource TechComboBox}">
                        <ComboBoxItem Content="9600"/>
                        <ComboBoxItem Content="19200"/>
                        <ComboBoxItem Content="38400"/>
                        <ComboBoxItem Content="57600"/>
                        <ComboBoxItem Content="115200"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- 报文格式设置区域 -->
        <GroupBox Header="报文格式设置" Grid.Column="1" Grid.Row="0" Margin="5" Style="{StaticResource TechGroupBox}">
            <StackPanel Orientation="Vertical" Margin="5">
                <StackPanel Orientation="Horizontal">
                    <Label Content="设备ID:" Width="80"/>
                    <TextBox x:Name="txtDeviceID" Width="50" MaxLength="2" Style="{StaticResource TechTextBox}"/>
                    <Label Content="功能码:" Width="80" Margin="10,0,0,0"/>
                    <TextBox x:Name="txtFunctionCode" Width="50" MaxLength="2" Style="{StaticResource TechTextBox}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="灯号:" Width="80"/>
                    <TextBox x:Name="txtLampNumber" Width="100" MaxLength="4" Style="{StaticResource TechTextBox}"/>
                    <Label Content="参数数量:" Width="80" Margin="10,0,0,0"/>
                    <TextBox x:Name="txtParamCount" Width="100" MaxLength="4" Style="{StaticResource TechTextBox}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="参数字节数:" Width="80"/>
                    <TextBox x:Name="txtByteCount" Width="50" MaxLength="2" Style="{StaticResource TechTextBox}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- 灯光参数设置区域 -->
        <GroupBox Header="灯光参数设置" Grid.Column="0" Grid.Row="1" Margin="5" Style="{StaticResource TechGroupBox}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="渐变:" Width="80"/>
                        <Slider x:Name="sliderFade" Minimum="0" Maximum="15" Width="200" Style="{StaticResource TechSlider}"/>
                        <TextBox x:Name="txtFade" Width="50" Margin="10,0,0,0" Style="{StaticResource TechTextBox}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Label Content="亮度:" Width="80"/>
                        <Slider x:Name="sliderBrightness" Minimum="0" Maximum="254" Width="200" Style="{StaticResource TechSlider}"/>
                        <TextBox x:Name="txtBrightness" Width="50" Margin="10,0,0,0" Style="{StaticResource TechTextBox}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Label Content="色温:" Width="80"/>
                        <Slider x:Name="sliderColorTemp" Minimum="25" Maximum="65" Width="200" Style="{StaticResource TechSlider}"/>
                        <TextBox x:Name="txtColorTemp" Width="50" Margin="10,0,0,0" Style="{StaticResource TechTextBox}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Label Content="红色:" Width="80"/>
                        <Slider x:Name="sliderRed" Minimum="0" Maximum="254" Width="200" Style="{StaticResource TechSlider}"/>
                        <TextBox x:Name="txtRed" Width="50" Margin="10,0,0,0" Style="{StaticResource TechTextBox}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Label Content="绿色:" Width="80"/>
                        <Slider x:Name="sliderGreen" Minimum="0" Maximum="254" Width="200" Style="{StaticResource TechSlider}"/>
                        <TextBox x:Name="txtGreen" Width="50" Margin="10,0,0,0" Style="{StaticResource TechTextBox}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Label Content="蓝色:" Width="80"/>
                        <Slider x:Name="sliderBlue" Minimum="0" Maximum="254" Width="200" Style="{StaticResource TechSlider}"/>
                        <TextBox x:Name="txtBlue" Width="50" Margin="10,0,0,0" Style="{StaticResource TechTextBox}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Label Content="白色:" Width="80"/>
                        <Slider x:Name="sliderWhite" Minimum="0" Maximum="254" Width="200" Style="{StaticResource TechSlider}"/>
                        <TextBox x:Name="txtWhite" Width="50" Margin="10,0,0,0" Style="{StaticResource TechTextBox}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>

        <!-- 报文显示和发送区域 -->
        <GroupBox Header="报文控制" Grid.Column="1" Grid.Row="1" Margin="5" Style="{StaticResource TechGroupBox}">
            <StackPanel Orientation="Vertical" Margin="5">
                <Label Content="完整报文：" FontWeight="Bold"/>
                <TextBox x:Name="txtFullMessage" Height="100" Margin="0,5,0,0" 
                         IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                         Style="{StaticResource TechTextBox}"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="发送间隔(ms):" Width="100"/>
                    <TextBox x:Name="txtInterval" Width="100" Style="{StaticResource TechTextBox}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button x:Name="btnSingleSend" Content="单次发送" Width="100" Style="{StaticResource TechButton}"/>
                    <Button x:Name="btnContinuousSend" Content="连续发送" Width="100" Margin="10,0,0,0" Style="{StaticResource TechButton}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- 状态栏 -->
        <StatusBar Grid.ColumnSpan="2" Grid.Row="2" Background="#FF333333">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>


